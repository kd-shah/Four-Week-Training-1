@page
@model List<EFCore.Models.Product>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <!-- Add other product properties as needed -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <!-- Display other product properties as needed -->
            <td>
                <a asp-page="./Product" asp-route-id="@product.Id">Edit</a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id" onsubmit="return confirm('Are you sure you want to delete this product?');">
                    <button type="submit" class="btn btn-link">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

